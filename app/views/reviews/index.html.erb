<p id="notice"><%= notice %></p>

<h1>Listing Reviews for a Place</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Photo</th>
      <th>Tag</th>
      <th>Stars</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.stars %></td>
        <td><%= review.text %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_place_review_path %>
<div class="container" style="margin: 20px">
  <%= render "reviews/form" %>
</div>
