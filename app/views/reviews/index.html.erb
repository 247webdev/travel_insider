<p id="notice"><%= notice %></p>

<h1>Listing Reviews for a user</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Photo</th>
      <th>Tag</th>
      <th>Stars</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.name %></td>
        <td><%= review.address %><%= review.city %><%= review.state %><%= review.country %><%= review.zip %></td>
        <td><%= review.photo %></td>
        <td><%= review.tag %></td>
        <td><%= review.stars %></td>
        <td><%= review.text %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
